{{> navbar}}
<link rel="stylesheet" href="/css/modulos.css">
<div class="total">
<div class="col-md-10">
  <h1>Ventas</h1>
  <div class="contenedor">
    <div class="buscador">
      <form class="search-form">
        <input type="text" class="search-input" placeholder="Buscar ventas...">
        <div class="boton-buscar">
        <button type="submit" class="btn btn-primary"><i class="fa-solid
            fa-search"></i></button>
            </div>
      </form>
      <br><br><br>
      <div class="botones">
        <button class="btn btn-danger"><i class="fa-regular fa-file-pdf"></i></button>
        <button class="btn btn-success"><i class="fa-regular fa-file-excel"></i></button>
      </div>
      <div class="add">
      <a href="/agregarVenta"><button  class="btn btn-primary">Agregar venta</i></button></a>
    </div>
    </div>
    
  </div>
  <div class="table-container">

<table class="table table-striped-columns">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Cliente</th>
      <th scope="col">fecha Venta</th>
      <th scope="col">Numero Factura</th>
      <th scope="col">Metodo pago</th>
      <th scope="col">Valor</th>
      <th scope="col">Estado</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each lista_ventas}}
    <tr>
      <td>{{id}}</td>
      <td>{{cliente}}</td>
      <td>{{fechaVenta}}</td>
      <td>{{numeroFactura}}</td>
      <td>{{metodoPago}}</td>
      <td>{{valor}}</td>
      <td>{{estado}}</td>
      <td>
        <button class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></button>
        <button class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>
        <label class="switch">
          <input type="checkbox" id="toggleBtn">
            <span class="slider round"></span>
        </label>
        <a href="/detalleVenta"><button class="btn btn-info"><i class="fa-solid fa-info"></i></button></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>
</div>
{{> footer}}