<link rel="stylesheet" href="../css/formulario.css">

<div class="container">
  <div class="row">
    <div class="col-md-12 d-flex justify-content-center align-items-center">
      <form class="col-md-4 col-lg-4 col-xl-4">
         <h2 class="form_title">Editar Cliente</h2>
    
    <div class="form_container">
        <div class="form_group">
            <input type="text" id="nombres" class="form_input" placeholder=" ">
            <label for="name" class="form_label">Nombres</label>
            <span class="form_line"></span>
        </div>
         <div class="form_group">
            <input type="text" id="apellidos" class="form_input" placeholder=" ">
            <label for="name" class="form_label">Apellidos</label>
            <span class="form_line"></span>
        </div>
         <div class="form_group">
            <input type="email" id="correo" class="form_input" placeholder=" ">
            <label for="name" class="form_label">Correo</label>
            <span class="form_line"></span>
        </div>
         <div class="form_group">
            <input type="number" id="celular" class="form_input" placeholder=" ">
            <label for="name" class="form_label">Celular</label>
            <span class="form_line"></span>
        </div>
        <div class="botones">
             <button id="btnRegistrarCliente" type="button" class="btn btn-success">Actualizar</button>
            <a href="/clientes"><button  type="button" class="btn btn-danger">Cancelar</button></a>
        </div>
    </div>
      </form>
      <div class="col-md-5 col-lg-5 col-xl-5" id="mensaje"></div>
    </div>
  </div>
</div>
